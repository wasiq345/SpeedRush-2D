{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Raylib (build.bat)",
            "type": "shell",
            "command": "${workspaceFolder}\\build.bat",
            "args": [
                "main",
                "main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Compile using build.bat"
        },
        {
            "label": "Run Raylib Executable",
            "type": "shell",
            "command": "${workspaceFolder}\\main.exe",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Run compiled Raylib executable"
        }
    ]
}
